<?xml version="1.0" encoding="utf-8"?>
<ScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="20dp">
		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:textSize="20sp"
				android:textStyle="bold"
				android:text="合同名称"/>
		<TextView
				android:id="@+id/contract_detail_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="30dp"
				android:textSize="25sp"
				tools:text="苹果一万箱"/>
		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:textSize="20sp"
				android:textStyle="bold"
				android:text="合同类型"/>
		<TextView
				android:id="@+id/contract_detail_level"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="30dp"
				android:textSize="25sp"
				tools:text="直销合同"/>
		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:textSize="20sp"
				android:textStyle="bold"
				android:text="总金额"/>
		<TextView
				android:id="@+id/contract_detail_price"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="30dp"
				android:textSize="25sp"
				tools:text="20000.0"/>
		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:textSize="20sp"
				android:textStyle="bold"
				android:text="甲方"/>
		<TextView
				android:id="@+id/contract_detail_a"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="30dp"
				android:textSize="25sp"
				tools:text="小刚"/>
		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:textSize="20sp"
				android:textStyle="bold"
				android:text="乙方"/>
		<TextView
				android:id="@+id/contract_detail_b"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="30dp"
				android:textSize="25sp"
				tools:text="尼古拉斯·赵四"/>
		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:textSize="20sp"
				android:textStyle="bold"
				android:text="详细信息"/>
		<TextView
				android:id="@+id/contract_detail_desc"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="25sp"
				tools:text="啦啦啦啦"/>
	</LinearLayout>
</ScrollView>
