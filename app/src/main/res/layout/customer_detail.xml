<?xml version="1.0" encoding="utf-8"?>
<ScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/side_nav_bar"
				android:orientation="horizontal"
				android:padding="25dp">
			<TextView
					android:id="@+id/customer_detail_name"
					android:layout_width="wrap_content"
					android:maxWidth="285dp"
					android:layout_height="wrap_content"
					android:textSize="40sp"
					android:textColor="#ffffff"
					tools:text="南京大学南京大学南京大学南京大学"
					tools:background="#00f0f0"/>
			<TextView
					android:id="@+id/customer_detail_level"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="15dp"
					android:textSize="15sp"
					android:textColor="#caab68"
					tools:text="普通客户"
					tools:background="#079201"/>
		</LinearLayout>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="20dp">
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="10dp"
					android:textSize="20sp"
					android:textStyle="bold"
					android:text="电话号码"/>
			<TextView
					android:id="@+id/customer_detail_tel"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="30dp"
					android:textSize="25sp"
					tools:text="12345678"/>
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="10dp"
					android:textSize="20sp"
					android:textStyle="bold"
					android:text="电子邮箱"/>
			<TextView
					android:id="@+id/customer_detail_mail"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="30dp"
					android:textSize="25sp"
					tools:text="12345678@qq.com"/>
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="10dp"
					android:textSize="20sp"
					android:textStyle="bold"
					android:text="个人主页"/>
			<TextView
					android:id="@+id/customer_detail_web"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="30dp"
					android:textSize="25sp"
					tools:text="www.43ewrqw.com"/>
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="10dp"
					android:textSize="20sp"
					android:textStyle="bold"
					android:text="地址"/>
			<TextView
					android:id="@+id/customer_detail_addr"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="30dp"
					android:textSize="25sp"
					tools:text="广州路"/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>
